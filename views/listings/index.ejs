<% layout('/layouts/boilerplate') -%>  

<body>
    <h2>All Listing</h2>
    <!-- <form method="get" action="listings/new">
        <button>Add new listing</button>
    </form> -->
    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-3">
  <% for(listing of allListings) { %>
    <a href="listings/<%= listing._id %>" class="listing-link">
    <div class="card col" >
  <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height: 20rem;">
  <div class="card-img-overlay"></div>
  <div class="card-body">
    <p class="card-text">
       <b> <%= listing.title %> </b> <br>
        <%= listing.price.toLocaleString('en-IN', { style: 'currency',currency: 'INR'}) %>/night
    </p>
  </div>
</div>                              <!--Creating cards-->
  </a>
<% } %>
</div>
</body>


